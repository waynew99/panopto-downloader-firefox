{
  "name": "iPanopto",
  "description": "Panopto video downloader",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "128": "iPanopto.png"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "downloads",
    "tabs"
  ]
}